<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
        <title>Home</title>
</head>

<body>
    <header>
        <% include ../partials/header %>
    </header>
    <div>
        <form action="/telefones/novo" method="post">
            <div class="form-group">
                <label for="descricao">Descricao</label>
                <input type="text" class="form-control" name="descricao" id="descricao" placeholder="Descricao">
            </div>
            <div class="form-group">
                <label for="modelo">Modelo</label>
                <input type="text" class="form-control" name="modelo" id="modelo" placeholder="Modelo">
            </div>
            <div class="form-group">
                <label for="cor">Cor</label>
                <input type="text" class="form-control" name="cor" id="cor" placeholder="Cor">
            </div>
            <div class="form-group">
                <label for="chips">Chips</label>
                <select name="chips" class="form-control" id="chips">
                    <option value="1">1</option>
                    <option value="2">2</option>
                </select>
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Example select</label>
                <select name="operadora" class="form-control" id="exampleFormControlSelect1">
                    <% operadoras.forEach((operadora) => { %>
                        <option value=<%= operadora.ope_codigo %>>
                            <%= operadora.ope_nome %>
                        </option>
                        <% }) %>
                </select>
            </div>
            <div>
                <button type="submit" class="btn btn-primary" value="submit">
                    <i class="material-icons">save</i>
                </button>
            </div>
        </form>
    </div>
    <% include ../partials/scripts %>
        <footer>
            <% include ../partials/footer %>
        </footer>
</body>

</html>